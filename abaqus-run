#/bin/bash
INPUT=$(realpath $1)
USER=$(realpath $2)
INPUT_NAME=$(basename $1)
USER_NAME=$(basename $2)
BASEDIR=$(dirname $INPUT)
TIME=$(date +%s)
JOBNAME="${TIME}-${INPUT_NAME%%.*}-${USER_NAME%%.*}"
OUTDIR="${BASEDIR}/${JOBNAME}"
mkdir -p ${OUTDIR}
cd ${OUTDIR}
abaqus input=${INPUT} user=${USER} cpus=${3:-1} job=${JOBNAME}
